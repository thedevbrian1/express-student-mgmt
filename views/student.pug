doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/output.css")
        title #{student.first_name} #{student.last_name}
    body 
        main(class="bg-gradient-to-r from-[#8E2DE2] to-[#4A00E0] text-white min-h-screen pt-20")
            div(class="px-6 md:px-12 lg:max-w-5xl mx-auto")
                a(href="/" class="underline hover:text-orange-500 transition-colors ease-in-out duration-300") Back
                h1(class="font-bold text-4xl lg:text-6xl mt-4") Student info
                div(class="mt-8 bg-[#8945e7] p-8 rounded-lg")
                    
                    p(class="flex gap-4") 
                        span(class="font-semibold") Name:
                        span #{student.first_name} #{student.last_name}
                    p(class="flex gap-4 mt-2") 
                        span(class="font-semibold") Age: 
                        span #{student.age}
                    p(class="flex gap-4 mt-2") 
                        span(class="font-semibold") Phone: 
                        span #{student.phone}
                    p(class="flex gap-4 mt-2") 
                        span(class="font-semibold") Address: 
                        span #{student.address}
                    if student.classes
                        div(class="mt-2") 
                            p(class="font-semibold") Classes 
                            ul 
                                each item in student.classes 
                                    li= item
                    if student.hobbies
                        div(class="mt-2") 
                            p(class="font-semibold") Hobbies 
                            ul 
                                each item in student.hobbies 
                                    li= item
                                